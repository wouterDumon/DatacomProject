<Window x:Class="Colour_Dome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" Margin="10" x:Name="cboPorts"/>
        <Button x:Name="btnInit" Grid.Row="1" Content="Init" Margin="10" Click="btnInit_Click"/>
        <Button Height="30" Content="Links" x:Name="btnLinks" HorizontalAlignment="Left" Margin="96,40,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="btnLinks_Click"/>
        <Button Height="30" Content="Rechts" x:Name="btnRechts" HorizontalAlignment="Left" Margin="351,40,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="btnRechts_Click"/>
        <Button Height="30" Content="Omhoog" x:Name="btnOmhoog" HorizontalAlignment="Left" Margin="232,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="btnOmhoog_Click"/>
        <Button Height="30" Content="Omlaag" x:Name="btnOmlaag" HorizontalAlignment="Left" Margin="232,41,0,0" Grid.Row="3" VerticalAlignment="Top" Width="75" Click="btnOmlaag_Click"/>

    </Grid>
</Window>
